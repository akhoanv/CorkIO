<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewMonth" parent="Theme.EvidenceVault">
        <item name="colorAccent">@color/board_black</item>
        <item name="android:textColorPrimary">@color/board_black</item>
    </style>

    <style name="CalenderViewWeekDay" parent="Theme.EvidenceVault">
        <item name="android:textColor">@color/board_black</item>
    </style>

    <style name="CustomCalendarDay" parent="Theme.EvidenceVault">
        <item name="android:textColor">@color/calendar_color</item>
    </style>

    <style name="ListScrollColor" parent="Theme.EvidenceVault">
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarThumbVertical">@color/board_black</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>