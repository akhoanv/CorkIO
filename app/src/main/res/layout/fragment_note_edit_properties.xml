<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_edit_content_container"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@drawable/note_edit_inner_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/note_edit_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Edit Properties"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/board_black"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Label:"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/board_black"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"/>

        <EditText
            android:id="@+id/note_edit_connection_name_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:maxLines="1"
            android:textSize="16sp"
            android:imeOptions="actionDone"
            android:gravity="center_vertical"
            android:inputType="text"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/board_black"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/note_edit_color_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_palette_blue"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ImageView
            android:id="@+id/note_edit_color_green"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_palette_green"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/note_edit_color_blue"/>

        <ImageView
            android:id="@+id/note_edit_color_orange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_palette_orange"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/note_edit_color_green"/>

        <ImageView
            android:id="@+id/note_edit_color_pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_palette_pink"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/note_edit_color_orange"/>

        <ImageView
            android:id="@+id/note_edit_color_red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_palette_red"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/note_edit_color_pink"/>

        <ImageView
            android:id="@+id/note_edit_color_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_palette_yellow"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/note_edit_color_red"/>

        <ImageView
            android:id="@+id/note_edit_color_selection"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hand_drawn_selection"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/note_edit_connection_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/paper_white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/button_paper_background"/>
    </LinearLayout>
</LinearLayout>