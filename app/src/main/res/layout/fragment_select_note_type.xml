<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/note_select_type_background"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="10dp">

            <View
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:background="@color/board_black"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Preset"
                android:gravity="bottom"
                android:textSize="30sp"
                android:textColor="@color/board_black"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/board_black"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <GridView
            android:id="@+id/note_type_select_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:numColumns="1"
            android:scrollbars="vertical"
            android:theme="@style/ListScrollColor"/>
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pin_shadow"
        android:rotation="53"
        android:layout_marginStart="152dp"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/note_type_select_unpin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pin"
        android:rotation="45"
        android:layout_marginStart="150dp"/>
</RelativeLayout>