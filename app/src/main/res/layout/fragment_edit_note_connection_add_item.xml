<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_note_connection_item"
    android:gravity="center_vertical"
    android:weightSum="1.0">

    <ImageView
        android:id="@+id/note_edit_connection_icon"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/generic_note"
        android:layout_weight="0.2"
        android:paddingStart="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:gravity="center_vertical"
        android:layout_weight="0.8"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/note_edit_connection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/board_black"/>

        <TextView
            android:id="@+id/note_edit_connection_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textSize="11sp"
            android:textColor="@color/board_black"/>

    </LinearLayout>
</LinearLayout>