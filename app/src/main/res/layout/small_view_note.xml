<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:scaleType="centerCrop">

    <LinearLayout
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:weightSum="1.0"
        android:layout_marginTop="15dp"
        android:background="@drawable/note_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.72"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/small_view_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/generic_note"
                android:foreground="@drawable/note_icon_background"
                android:layout_margin="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/small_view_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight="0.28"
            android:textStyle="bold"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Sample Text"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_gray"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/note_pin_shadow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pin_shadow"
        android:rotation="50"
        android:layout_marginStart="65dp"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/note_pin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pin"
        android:rotation="40"
        android:layout_marginStart="63dp"/>
</RelativeLayout>