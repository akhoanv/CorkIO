<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/note_edit_background" >

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/note_edit_summary_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/note_edit_tab_background_red"
                android:gravity="center">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:rotation="270"
                    android:fontFamily="@font/gochi_hand"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/note_edit_connection_btn"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/note_edit_tab_background_yellow"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Connections"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:rotation="270"
                    android:fontFamily="@font/gochi_hand"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/note_edit_content_container"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:background="@drawable/note_edit_inner_background"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/note_edit_unpin"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/pin"
        android:rotation="45"
        android:layout_marginStart="150dp"/>
</RelativeLayout>