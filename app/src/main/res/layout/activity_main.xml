<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/app_view"
    android:orientation="horizontal"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_horz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.96"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bot_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.82"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_horz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.13"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/addButton"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/add_button_background"
        app:layout_constraintBottom_toBottomOf="@id/right_horz"
        app:layout_constraintEnd_toEndOf="@id/bot_vert"
        app:layout_constraintStart_toStartOf="@id/bot_vert"
        app:layout_constraintTop_toTopOf="@id/right_horz"
        android:weightSum="1.0"
        android:elevation="40dp">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:src="@drawable/add"
            android:layout_weight="0.3"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Add Note"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/board_black"
            android:elevation="40dp"
            android:layout_weight="0.7"
            android:layout_marginRight="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>