<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/general_grid_item"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/board_edit_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/color_palette_blue"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="3dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:gravity="center_vertical"
        android:layout_weight="0.65"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/board_edit_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/board_black"/>

        <TextView
            android:id="@+id/board_edit_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X: 120, Y: 239"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@color/board_black"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/board_edit_list_delete_btn"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/trash_black"
        android:layout_weight="0.15"
        android:paddingEnd="10dp"/>
</LinearLayout>