<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_note_connection_item"
    android:gravity="center_vertical"
    android:weightSum="1.0">

    <ImageView
        android:id="@+id/note_edit_connection_icon"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/icon"
        android:layout_weight="0.2"
        android:paddingStart="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:gravity="center_vertical"
        android:layout_weight="0.65"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/note_edit_connection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/board_black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_right"/>

            <TextView
                android:id="@+id/note_edit_connection_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#0 Title"
                android:textSize="11sp"
                android:gravity="center"
                android:textColor="@color/board_black"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/note_edit_connection_unlink"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/unlink"
        android:layout_weight="0.15"
        android:paddingEnd="10dp"/>
</LinearLayout>